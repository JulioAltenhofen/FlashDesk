<%- include("../layouts/header", {title: 'Atualização de Pedido' }) %>

    <%- include("../layouts/menu") %>

    <div class="container">
        <div class="card">
          <div class="card-content">
            <div class="columns">
                <div class="column is-four-fifths">
                  <h1 class="title is-4">Dados do Usuário</h1>
                </div>
                <div class="column is-one-fifth">
                  <div class="buttons is-pulled-right">
                    <a href="/" class="button is-small">Voltar</a>
                  </div>
                </div>
              </div>
            <div class="content">
              <div class="field">
                <label class="label">Nome:</label>
                <div class="control">
                  <input class="input" type="text" value="<%= pessoa.nome %>" disabled>
                </div>
              </div>
              
              <div class="space-after">
                <h3 class="title is-5 space-before">Endereço</h3>
                <div class="field">
                  <label class="label">Rua:</label>
                  <div class="control">
                    <input class="input" type="text" value="<%= pessoa.endereco.rua %>" disabled>
                  </div>
                </div>
                <div class="field">
                  <label class="label">Cidade:</label>
                  <div class="control">
                    <input class="input" type="text" value="<%= pessoa.endereco.cidade %>" disabled>
                  </div>
                </div>
              </div>
              <div class="field is-grouped is-grouped-centered">
                <div class="control">
                  <a href="/pessoas/<%= pessoa.id %>/update" class="button is-warning">Atualizar Dados</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

  <%- include("../layouts/footer") %>