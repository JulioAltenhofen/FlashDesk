<%- include("../layouts/header", {title: 'FlashDesk'}) %>

<%- include("../layouts/menu") %>

<section class="section">
    <div class="container">
      <div class="columns">
        <div class="column">
          <h1 class="title size-4">Lista de Tickets</h1>
        </div>
      </div>
      
      <% ticket.forEach(ticket =>{ %>
      <div class="flex flex-wrap">
        <div class="w-1/6 p-2 border-b border-t border-black">
          <p>Ticket NÂº <%= ticket.id %>
        </div>
        <div class="w-1/6 p-2 border-b border-t border-black">
          <p><%= ticket.titulo %>  
        </div>
        <div class="w-1/6 p-2 border-b border-t border-black">
          <p><%= ticket.pessoa.nome %>  
        </div>
        <div class="w-1/6 p-2 border-b border-t border-black">
          <% if (ticket.resposta != null) { %>
            <p><%= ticket.resposta.statusResposta %></p>
          <% } else { %>
            <p><%= ticket.status %></p>
          <% } %>
        </div>
        <div class="w-1/6 p-2 border-b border-t border-black">
          <p><%=  moment(ticket.data).format('DD/MM/YYYY HH:mm:ss') %>  
        </div>
        <div class="w-1/6 p-2 border-b border-t border-black ">
              <a href="/ticket/<%= ticket.pessoaId %>/<%= ticket.id %>" class="has-text-info">Ver</a>
              <a href="/tickets/<%= ticket.pessoaId %>/<%= ticket.id %>?_method=delete" class="pl-24 has-text-danger ">Remover</a>
        </div>
      </div>
      <% }) %>
        
      </div>
    </div>
  </section>

  <%- include("../layouts/footer") %>