<%- include("../layouts/header", {title: 'tickets'}) %>

<%- include("../layouts/menu") %>

<section class="section">
    <div class="container">
      <div class="columns">
        <div class="column column--large">
          <h1 class="title is-4">
            <span class="icon">
              <i class="fas fa-shopping-cart"></i>
            </span>
            Ticket <%= ticket.id %> de <%= pessoa.nome %>
          </h1>
        </div>
        <div class="column column--small">
          <div class="is-flex is-justify-flex-end">
            <a href="/tickets/<%= ticket.pessoaId%>" class="button is-small">
              Voltar
            </a>
          </div>
        </div>
      </div>
  
      <hr />
  
      <% ticket.forEach(ticket => { %>
      <div class="columns">
        <div class="column">
          <div class="card card--product">
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <p class="title is-6"><%= ticket.titulo %></p>
                  <p class="subtitle is-7">Status <%= ticket.status %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %> 
    </div>
  </section>
  
  
  
  
  


  <%- include("../layouts/footer") %>