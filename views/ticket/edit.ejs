<%- include("../layouts/header", {title: 'Atualização de Ticket' }) %>

    <%- include("../layouts/menu") %>


      <section class="section">
            <div class="container">
                <div class="columns">
                    <div class="column is-four-fifths">
                        <h1 class="title is-4">Atualização do Ticket <%= Ticket.id %>
                        </h1>
                    </div>
                    <div class="column is-one-fifth">
                        <div class="buttons is-pulled-right">
                            <a href="/Tickets" class="button is-small">Voltar</a>
                        </div>
                    </div>
                </div>
                <form action="/Tickets/<%= Ticket.pessoaId %>/<%= Ticket.id %>?_method=put" method="POST">
                    <div class="field">
                        <label class="label">Status</label>
                        <div class="control">
                            <select class="input" name="status" required placeholder="Selecione o status">
                                <option value="" disabled selected>Selecione o status</option>
                                <option value="Ticket criado">Ticket criado</option>
                                <option value="Em análise">Em análise</option>
                                <option value="Resolvido">Resolvido</option>
                            </select>
                        </div>
                    </div>

                    <div class="field">
                        <div class="control">
                            <button type="submit" class="button is-success">Atualizar</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

        <%- include("../layouts/footer") %>