<%- include("../layouts/header", {title: 'FlashDesk' }) %>

    <%- include("../layouts/menu") %>


      <section class="section">
            <div class="container">
                <div class="columns">
                    <div class="column is-four-fifths">
                        <h1 class="title is-4">Atualização do Ticket <%= ticket.id %>
                        </h1>
                    </div>
                    <div class="column is-one-fifth">
                        <div class="buttons is-pulled-right">
                            <a href="/ticket/<%= ticket.pessoaId %>/<%= ticket.id %>" class="button is-small">Voltar</a>
                        </div>
                    </div>
                </div>
                <form enctype="multipart/form-data" action="/ticket/<%= ticket.pessoaId %>/<%= ticket.id %>" method="POST">
                    <% if (user && user.role === 'admin') { %>
                    <div class="field">
                        <label class="label">Status</label>
                        <div class="control">
                            <select class="input" name="statusResposta" required placeholder="Selecione o status">
                                <option value="" disabled selected>Selecione o status</option>
                                <option value="Em análise">Em análise</option>
                                <option value="Finalizado">Finalizado</option>
                            </select>
                        </div>
                    </div>
                    <% } %>
                    <div class="field">
                        <label class="label">Texto</label>
                        <div class="control">
                            <textarea class="input" type="text" name="resposta" placeholder="Digite o texto" style="height: 250px;"></textarea>
                        </div>
                        </div>
                        <label class="p-3">
                            <input type="file" name="anexoResposta" class="block w-full text-sm text-slate-500
                            file:mr-4 file:py-2 file:px-4
                            file:rounded-xl file:border-0
                            file:text-sm file:font-semibold
                            file:bg-blue-50 file:text-blue-700
                            hover:file:bg-blue-100
                            "/>
                        </label>
                       
                    <div class="field">
                        <div class="control">
                            <button type="submit" class="button is-success">Atualizar</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

        <%- include("../layouts/footer") %>